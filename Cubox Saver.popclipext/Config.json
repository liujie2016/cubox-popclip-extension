{
  "name": "Universal Saver",
  "identifier": "cc.universal.popclip.saver.v1.0",
  "description": "Save selected text to any service with API",
  "app": {
    "name": "Universal Saver",
    "link": "https://github.com/liujie2016/cubox-popclip-extension"
  },
  "popclipVersion": 4155,
  "entitlements": ["network"],
  "options": [
    {
      "identifier": "apiUrl",
      "label": "API URL",
      "type": "string",
      "description": "Your API URL (e.g. https://dinoai.chatgo.pro/openapi/text/input)",
      "defaultValue": "https://dinoai.chatgo.pro/openapi/text/input"
    },
    {
      "identifier": "apiKey",
      "label": "API Key",
      "type": "string",
      "description": "Your API Key or Token for authentication (optional)"
    }
  ],
  "actions": [
    {
      "title": "Save to API Service",
      "icon": "icon.svg",
      "requirements": ["text"],
      "javascript file": "action.js"
    }
  ]
}